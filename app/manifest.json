{
    "manifest_version": 2,
    "name": "mark",
    "description": "This extension helps users share any URL (webpage) at a specific position in the document",
    "version": "0.0.1",
    "offline_enabled": true,
    "browser_action": {
        "default_title": "Mark this position!",
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "clipboardWrite"
    ],
    "omnibox": {
        "keyword" : "mark"
    }
}
