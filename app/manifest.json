{
    "manifest_version": 2,
    "name": "Marker",
    "description": "This extension helps users share URLs at a specific position in the document",
    "version": "0.0.1",
    "browser_action": {
        "default_title": "Mark this position!",
        "default_icon": "icon.png"
    },
    "background": {
        "page": "popup.html"
    },
    "permissions": [
        "activeTab",
        "clipboardWrite"
    ]
}
